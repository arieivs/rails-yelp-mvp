<div class="p-3">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.category.capitalize %> restaurant</p>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <h3>Reviews</h3>
  <% @reviews.each do |review| %>
    <div>
      <p><%= review.content %></p>
      <p>Rating: <%= review.rating %></p>
    </div>
  <% end %>

  <p><%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-dark my-3" %></p>

  <div class="p-3">
    <h3>Add a review</h3>

    <%= simple_form_for [ @restaurant, @review ] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
